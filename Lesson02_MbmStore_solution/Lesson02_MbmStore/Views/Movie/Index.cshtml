@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    ViewData["Title"] = "Movies";
}

<h1>@ViewData["Title"]</h1>

<a asp-controller="Home" asp-action="Index">Home</a>


<h2>@ViewBag.JungleBook.Title</h2>
<div>
    Director: ViewBag.JungleBook.Director<br>
    Price: @String.Format("{0:0.00}", ViewBag.JungleBook.Price)
</div>
<div><img src="Images/@ViewBag.JungleBook.ImageFileName" alt="@ViewBag.JungleBook.Title" /></div>

