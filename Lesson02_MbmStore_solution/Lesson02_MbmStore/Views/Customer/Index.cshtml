@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@using MbmStore.Models
@{
    ViewData["Title"] = "Customer";
}

<h1>Customers</h1>
<a asp-controller="Home" asp-action="Index">Home</a>

<p>
    @ViewBag.C1.FirstName  @ViewBag.C1.LastName <br />
    @ViewBag.C1.Address <br />
    @ViewBag.C1.Zip @ViewBag.C1.City
</p>

<p>
    @ViewBag.C2.FirstName  @ViewBag.C2.LastName <br />
    @ViewBag.C2.Address <br />
    @ViewBag.C2.Zip @ViewBag.C2.City
</p>

<h2>Itetate over at <code>List</code> of <code>Customers</code></h2>
@foreach (Customer customer in ViewBag.Customers)
{
    <p>
        @customer.FirstName  @customer.LastName <br />
        @customer.Address <br />
        @customer.Zip @customer.City
    </p>
}
<h2>Phone list</h2>
<p>
    @ViewBag.C1.FirstName  @ViewBag.C1.LastName
    (@string.Join(", ", ViewBag.C1.PhoneNumbers))

    <br />
    @ViewBag.C2.FirstName  @ViewBag.C2.LastName
    (@string.Join(", ", ViewBag.C2.PhoneNumbers))
</p>

<h2>Generated by itetating over at <code>List</code> of <code>Customers</code></h2>
<p>
    @foreach (Customer customer in ViewBag.Customers)
    {
        <span>
            @customer.FirstName @customer.LastName
            (@string.Join(", ", customer.PhoneNumbers))
        </span>
        <br />

    }
</p>
<h2>Age example </h2>
<p>@ViewBag.C1.FirstName  @ViewBag.C1.LastName is @ViewBag.C1.Age years old</p>
